<Page x:Class="Сourse_management.User_Pages.MyCoursesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Сourse_management.User_Pages"
      mc:Ignorable="d" 
      d:DesignHeight="768" d:DesignWidth="872"
      Title="MyCoursesPage">

    <Grid Background="Transparent">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="50">
                <TextBlock Text="Мои курсы"
                           Foreground="#C9D4F0"
                           FontSize="32"
                           FontWeight="Bold"
                           Margin="0,0,0,30"/>

                <!-- Список моих курсов -->
                <ItemsControl x:Name="MyCoursesItemsControl">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#2C416C"
                                    BorderBrush="#6F87B8"
                                    BorderThickness="2"
                                    CornerRadius="15"
                                    Margin="0,0,0,20"
                                    Padding="25">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Название курса -->
                                    <TextBlock Grid.Row="0"
                                               Text="{Binding Courses.Courses_Name}"
                                               Foreground="#C9D4F0"
                                               FontSize="24"
                                               FontWeight="Bold"
                                               Margin="0,0,0,10"/>

                                    <!-- Описание курса -->
                                    <TextBlock Grid.Row="1"
                                               Text="{Binding Courses.Courses_Descriptions}"
                                               Foreground="#9AA8C7"
                                               FontSize="14"
                                               TextWrapping="Wrap"
                                               Margin="0,0,0,15"/>

                                    <!-- Статус и кнопки -->
                                    <Grid Grid.Row="2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                                            <TextBlock Text="Статус: "
                                                       Foreground="#9AA8C7"
                                                       FontSize="13"
                                                       VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding Courses_Status.Status}"
                                                       Foreground="#C9D4F0"
                                                       FontSize="13"
                                                       FontWeight="Bold"
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>

                                        <Button Grid.Column="1"
                                                Content="Открыть курс"
                                                Width="150"
                                                Height="40"
                                                FontSize="14"
                                                Foreground="#C9D4F0"
                                                Background="#4A7AC9"
                                                BorderBrush="#6F87B8"
                                                BorderThickness="2"
                                                Cursor="Hand"
                                                Click="OpenCourse_Click"
                                                Tag="{Binding Courses_Id}"
                                                Style="{StaticResource RoundButtonStyle}"/>
                                    </Grid>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Сообщение если курсов нет -->
                <TextBlock x:Name="NoMyCoursesTextBlock"
                           Text="Вы еще не записаны ни на один курс"
                           Foreground="#9AA8C7"
                           FontSize="18"
                           HorizontalAlignment="Center"
                           Margin="0,50,0,0"
                           Visibility="Collapsed"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
