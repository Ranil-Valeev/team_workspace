<Page x:Class="Сourse_management.User_Pages.UserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Сourse_management.User_Pages"
      mc:Ignorable="d" 
      d:DesignHeight="768" d:DesignWidth="1152"
      Title="UserPage">

    <Grid>
        <Border>
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#091333" Offset="0"/>
                    <GradientStop Color="#182448" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
        </Border>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="280"/>
            </Grid.ColumnDefinitions>

            <!-- Левая часть - Frame для контента -->
            <Frame Grid.Column="0"
                   x:Name="UserContentFrame"
                   NavigationUIVisibility="Hidden"
                   Background="Transparent"/>

            <!-- Правая панель -->
            <Border Grid.Column="1"
                    Background="#1A2847"
                    BorderBrush="#2C416C"
                    BorderThickness="2,0,0,0">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Верхняя часть - иконки и информация пользователя -->
                    <StackPanel Grid.Row="0" Margin="20,20,20,30">

                        <!-- Три кнопки-иконки -->
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Right"
                                    Margin="0,0,0,20">

                            <Button Width="32" Height="32"
                                    Margin="5,0"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Click="Minimize_Click">
                                <TextBlock Text="–" FontSize="20" Foreground="#9AA8C7"/>
                            </Button>

                            <Button Width="32" Height="32"
                                    Margin="5,0"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Click="Maximize_Click">
                                <TextBlock Text="□" FontSize="16" Foreground="#9AA8C7"/>
                            </Button>

                            <Button Width="32" Height="32"
                                    Margin="5,0"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Click="Close_Click">
                                <TextBlock Text="✕" FontSize="18" Foreground="#9AA8C7"/>
                            </Button>
                        </StackPanel>

                        <!-- Лого -->
                        <Image Source="/Assets/Лого.png"
                               Width="110"
                               Height="110"
                               Stretch="Uniform"
                               Margin="0,0,0,10"/>

                        <TextBlock Text="Hello, Code!"
                                   Foreground="#9AA8C7"
                                   FontSize="16"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,20"/>

                        <!-- Индикатор роли -->
                        <Border Background="#4A7AC9"
                                CornerRadius="12"
                                Padding="12,6"
                                HorizontalAlignment="Center">
                            <TextBlock Text="● ПОЛЬЗОВАТЕЛЬ"
                                       Foreground="White"
                                       FontSize="12"
                                       FontWeight="Bold"/>
                        </Border>
                    </StackPanel>

                    <!-- Меню навигации -->
                    <StackPanel Grid.Row="1" 
                                Margin="20,0">

                        <Button Content="Профиль"
                                Width="240"
                                Height="46"
                                Margin="0,0,0,14"
                                FontSize="16"
                                Foreground="#C9D4F0"
                                Background="#2C416C"
                                BorderBrush="#6F87B8"
                                BorderThickness="2"
                                Cursor="Hand"
                                Click="Profile_Click"
                                Style="{StaticResource RoundButtonStyle}"/>

                        <Button Content="Статьи и задачи"
                                Width="240"
                                Height="46"
                                Margin="0,0,0,14"
                                FontSize="16"
                                Foreground="#C9D4F0"
                                Background="#2C416C"
                                BorderBrush="#6F87B8"
                                BorderThickness="2"
                                Cursor="Hand"
                                Click="Articles_Click"
                                Style="{StaticResource RoundButtonStyle}"/>

                        <Button Content="Пример текста 2"
                                Width="240"
                                Height="46"
                                Margin="0,0,0,14"
                                FontSize="16"
                                Foreground="#C9D4F0"
                                Background="#2C416C"
                                BorderBrush="#6F87B8"
                                BorderThickness="2"
                                Cursor="Hand"
                                Click="Example2_Click"
                                Style="{StaticResource RoundButtonStyle}"/>

                        <Button Content="Пример текста 3"
                                Width="240"
                                Height="46"
                                Margin="0,0,0,14"
                                FontSize="16"
                                Foreground="#C9D4F0"
                                Background="#2C416C"
                                BorderBrush="#6F87B8"
                                BorderThickness="2"
                                Cursor="Hand"
                                Click="Example3_Click"
                                Style="{StaticResource RoundButtonStyle}"/>

                        <Button Content="Пример текста 4"
                                Width="240"
                                Height="46"
                                Margin="0,0,0,14"
                                FontSize="16"
                                Foreground="#C9D4F0"
                                Background="#2C416C"
                                BorderBrush="#6F87B8"
                                BorderThickness="2"
                                Cursor="Hand"
                                Click="Example4_Click"
                                Style="{StaticResource RoundButtonStyle}"/>

                        <Button Content="Пример текста 5"
                                Width="240"
                                Height="46"
                                Margin="0,0,0,14"
                                FontSize="16"
                                Foreground="#C9D4F0"
                                Background="#2C416C"
                                BorderBrush="#6F87B8"
                                BorderThickness="2"
                                Cursor="Hand"
                                Click="Example5_Click"
                                Style="{StaticResource RoundButtonStyle}"/>
                    </StackPanel>

                    <!-- Кнопка выхода внизу -->
                    <Button Grid.Row="2"
                            Content="Выход"
                            Width="240"
                            Height="46"
                            Margin="20,0,20,30"
                            FontSize="16"
                            Foreground="#C9D4F0"
                            Background="#2C416C"
                            BorderBrush="#6F87B8"
                            BorderThickness="2"
                            Cursor="Hand"
                            Click="Logout_Click"
                            Style="{StaticResource RoundButtonStyle}"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>
