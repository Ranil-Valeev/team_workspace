<Page x:Class="Сourse_management.User_Pages.CoursesListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Сourse_management.User_Pages"
      mc:Ignorable="d" 
      d:DesignHeight="768" d:DesignWidth="872"
      Title="CoursesListPage">

    <Grid Background="Transparent">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="50">
                <TextBlock Text="Доступные курсы"
                           Foreground="#C9D4F0"
                           FontSize="32"
                           FontWeight="Bold"
                           Margin="0,0,0,30"/>

                <!-- Список курсов -->
                <ItemsControl x:Name="CoursesItemsControl">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#2C416C"
                                    BorderBrush="#6F87B8"
                                    BorderThickness="2"
                                    CornerRadius="15"
                                    Margin="0,0,0,20"
                                    Padding="25">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <!-- Название курса -->
                                        <TextBlock Text="{Binding Courses_Name}"
                                                   Foreground="#C9D4F0"
                                                   FontSize="24"
                                                   FontWeight="Bold"
                                                   Margin="0,0,0,10"/>

                                        <!-- Описание курса -->
                                        <TextBlock Text="{Binding Courses_Descriptions}"
                                                   Foreground="#9AA8C7"
                                                   FontSize="14"
                                                   TextWrapping="Wrap"
                                                   Margin="0,0,0,15"/>

                                        <!-- Информация о курсе -->
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Часть: "
                                                       Foreground="#9AA8C7"
                                                       FontSize="13"/>
                                            <TextBlock Text="{Binding Courses_Part}"
                                                       Foreground="#C9D4F0"
                                                       FontSize="13"
                                                       Margin="0,0,20,0"/>

                                            <TextBlock Text="Язык: "
                                                       Foreground="#9AA8C7"
                                                       FontSize="13"/>
                                            <TextBlock Text="{Binding language.Language1}"
                                                       Foreground="#C9D4F0"
                                                       FontSize="13"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <!-- Кнопка добавления -->
                                    <Button Grid.Column="1"
                                            Content="Начать курс"
                                            Width="150"
                                            Height="46"
                                            FontSize="15"
                                            Foreground="#C9D4F0"
                                            Background="#4A7AC9"
                                            BorderBrush="#6F87B8"
                                            BorderThickness="2"
                                            Cursor="Hand"
                                            Click="StartCourse_Click"
                                            Tag="{Binding Courses_Id}"
                                            Style="{StaticResource RoundButtonStyle}"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Сообщение если курсов нет -->
                <TextBlock x:Name="NoCoursesTextBlock"
                           Text="Нет доступных курсов"
                           Foreground="#9AA8C7"
                           FontSize="18"
                           HorizontalAlignment="Center"
                           Margin="0,50,0,0"
                           Visibility="Collapsed"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
