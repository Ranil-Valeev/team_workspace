<Page x:Class="Сourse_management.User_Pages.CourseDetailPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Сourse_management.User_Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CourseDetailPage">

    <Grid Background="Transparent">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="50">

                <!-- Кнопка "Назад" -->
                <Button Content="← Назад к курсам"
                        Width="180"
                        Height="40"
                        Margin="0,0,0,20"
                        HorizontalAlignment="Left"
                        FontSize="14"
                        Foreground="#C9D4F0"
                        Background="#2C416C"
                        BorderBrush="#6F87B8"
                        BorderThickness="2"
                        Cursor="Hand"
                        Click="Back_Click"
                        Style="{StaticResource RoundButtonStyle}"/>

                <!-- Информация о курсе -->
                <Border Background="#2C416C"
                        BorderBrush="#6F87B8"
                        BorderThickness="2"
                        CornerRadius="15"
                        Padding="30"
                        Margin="0,0,0,30">
                    <StackPanel>
                        <!-- Название курса -->
                        <TextBlock x:Name="CourseNameTextBlock"
                                   Text="Название курса"
                                   Foreground="#C9D4F0"
                                   FontSize="32"
                                   FontWeight="Bold"
                                   Margin="0,0,0,15"/>

                        <!-- Описание курса -->
                        <TextBlock x:Name="CourseDescriptionTextBlock"
                                   Text="Описание курса"
                                   Foreground="#9AA8C7"
                                   FontSize="16"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,20"/>

                        <!-- Информация о курсе -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0"
                                       Text="Часть: "
                                       Foreground="#9AA8C7"
                                       FontSize="14"
                                       Margin="0,0,10,10"/>
                            <TextBlock Grid.Row="0" Grid.Column="1"
                                       x:Name="CoursePartTextBlock"
                                       Text="1"
                                       Foreground="#C9D4F0"
                                       FontSize="14"
                                       Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="1" Grid.Column="0"
                                       Text="Язык: "
                                       Foreground="#9AA8C7"
                                       FontSize="14"
                                       Margin="0,0,10,10"/>
                            <TextBlock Grid.Row="1" Grid.Column="1"
                                       x:Name="CourseLanguageTextBlock"
                                       Text="Русский"
                                       Foreground="#C9D4F0"
                                       FontSize="14"
                                       Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="2" Grid.Column="0"
                                       Text="Статус: "
                                       Foreground="#9AA8C7"
                                       FontSize="14"
                                       Margin="0,0,10,0"/>
                            <TextBlock Grid.Row="2" Grid.Column="1"
                                       x:Name="CourseStatusTextBlock"
                                       Text="В процессе"
                                       Foreground="#4A7AC9"
                                       FontSize="14"
                                       FontWeight="Bold"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Заголовок уроков -->
                <TextBlock Text="Уроки курса"
                           Foreground="#C9D4F0"
                           FontSize="24"
                           FontWeight="Bold"
                           Margin="0,0,0,20"/>

                <!-- Список уроков -->
                <ItemsControl x:Name="LessonsItemsControl">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#2C416C"
                                    BorderBrush="#6F87B8"
                                    BorderThickness="2"
                                    CornerRadius="15"
                                    Margin="0,0,0,15"
                                    Padding="20"
                                    Cursor="Hand"
                                    MouseLeftButtonDown="Lesson_Click"
                                    Tag="{Binding Lessons_Id}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <!-- Название урока -->
                                        <TextBlock Text="{Binding Lessons.Lessons_Name}"
                                                   Foreground="#C9D4F0"
                                                   FontSize="18"
                                                   FontWeight="Bold"
                                                   Margin="0,0,0,10"/>

                                        <!-- Часть урока -->
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Часть: "
                                                       Foreground="#9AA8C7"
                                                       FontSize="13"/>
                                            <TextBlock Text="{Binding Lessons.Lessons_Part}"
                                                       Foreground="#C9D4F0"
                                                       FontSize="13"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <!-- Статус урока -->
                                    <Border Grid.Column="1"
                                            Background="#4A7AC9"
                                            CornerRadius="12"
                                            Padding="15,8"
                                            VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Courses_Status.Status}"
                                                   Foreground="White"
                                                   FontSize="13"
                                                   FontWeight="Bold"/>
                                    </Border>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Сообщение если уроков нет -->
                <TextBlock x:Name="NoLessonsTextBlock"
                           Text="В этом курсе пока нет уроков"
                           Foreground="#9AA8C7"
                           FontSize="16"
                           HorizontalAlignment="Center"
                           Margin="0,30,0,0"
                           Visibility="Collapsed"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
