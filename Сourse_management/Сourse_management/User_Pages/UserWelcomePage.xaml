<Page x:Class="Сourse_management.User_Pages.UserWelcomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Сourse_management.User_Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserWelcomePage">

    <Grid Background="Transparent">
        <StackPanel VerticalAlignment="Center"
                    Margin="80,0,80,0">

            <TextBlock Text="Добро пожаловать в Hello, Code!"
                       Foreground="#6B7A9F"
                       FontSize="32"
                       FontWeight="Light"
                       TextWrapping="Wrap"
                       Margin="0,0,0,40"/>

            <TextBlock Text="Это пространство, где идеи превращаются в код."
                       Foreground="#6B7A9F"
                       FontSize="20"
                       TextWrapping="Wrap"
                       Margin="0,0,0,10"/>

            <TextBlock Text="Изучай программирование шаг за шагом:"
                       Foreground="#6B7A9F"
                       FontSize="20"
                       TextWrapping="Wrap"
                       Margin="0,0,0,30"/>

            <TextBlock Text="- Практика"
                       Foreground="#6B7A9F"
                       FontSize="18"
                       Margin="20,0,0,10"/>

            <TextBlock Text="- Понятные объяснения"
                       Foreground="#6B7A9F"
                       FontSize="18"
                       Margin="20,0,0,10"/>

            <TextBlock Text="- Реальные задачи"
                       Foreground="#6B7A9F"
                       FontSize="18"
                       Margin="20,0,0,10"/>

            <TextBlock Text="- Рост навыков"
                       Foreground="#6B7A9F"
                       FontSize="18"
                       Margin="20,0,0,50"/>

            <TextBlock Text="Начни обучение уже сегодня."
                       Foreground="#6B7A9F"
                       FontSize="20"
                       TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</Page>
