<Page x:Class="Сourse_management.User_Pages.UserProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Сourse_management.User_Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserProfilePage">

    <Grid Background="Transparent">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="50">
                <TextBlock Text="Мой профиль"
                           Foreground="#C9D4F0"
                           FontSize="32"
                           FontWeight="Bold"
                           Margin="0,0,0,30"/>

                <TextBlock x:Name="WelcomeTextBlock"
                           Foreground="#9AA8C7"
                           FontSize="18"
                           Margin="0,0,0,40"/>

                <TextBlock Text="Личная информация"
                           Foreground="#C9D4F0"
                           FontSize="24"
                           FontWeight="Bold"
                           Margin="0,0,0,20"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0"
                               Text="ФИО:"
                               Foreground="#9AA8C7"
                               FontSize="16"
                               Margin="0,0,0,15"/>
                    <TextBlock Grid.Row="0" Grid.Column="1"
                               x:Name="FullNameTextBlock"
                               Foreground="#C9D4F0"
                               FontSize="16"
                               Margin="0,0,0,15"/>

                    <TextBlock Grid.Row="1" Grid.Column="0"
                               Text="Email:"
                               Foreground="#9AA8C7"
                               FontSize="16"
                               Margin="0,0,0,15"/>
                    <TextBlock Grid.Row="1" Grid.Column="1"
                               x:Name="EmailTextBlock"
                               Foreground="#C9D4F0"
                               FontSize="16"
                               Margin="0,0,0,15"/>

                    <TextBlock Grid.Row="2" Grid.Column="0"
                               Text="Телефон:"
                               Foreground="#9AA8C7"
                               FontSize="16"
                               Margin="0,0,0,15"/>
                    <TextBlock Grid.Row="2" Grid.Column="1"
                               x:Name="PhoneTextBlock"
                               Foreground="#C9D4F0"
                               FontSize="16"
                               Margin="0,0,0,15"/>

                    <TextBlock Grid.Row="3" Grid.Column="0"
                               Text="Пол:"
                               Foreground="#9AA8C7"
                               FontSize="16"
                               Margin="0,0,0,15"/>
                    <TextBlock Grid.Row="3" Grid.Column="1"
                               x:Name="GenderTextBlock"
                               Foreground="#C9D4F0"
                               FontSize="16"
                               Margin="0,0,0,15"/>

                    <TextBlock Grid.Row="4" Grid.Column="0"
                               Text="Дата рождения:"
                               Foreground="#9AA8C7"
                               FontSize="16"
                               Margin="0,0,0,15"/>
                    <TextBlock Grid.Row="4" Grid.Column="1"
                               x:Name="BirthDateTextBlock"
                               Foreground="#C9D4F0"
                               FontSize="16"
                               Margin="0,0,0,15"/>

                    <TextBlock Grid.Row="5" Grid.Column="0"
                               Text="Логин:"
                               Foreground="#9AA8C7"
                               FontSize="16"
                               Margin="0,0,0,15"/>
                    <TextBlock Grid.Row="5" Grid.Column="1"
                               x:Name="LoginTextBlock"
                               Foreground="#C9D4F0"
                               FontSize="16"
                               Margin="0,0,0,15"/>
                </Grid>
 
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
