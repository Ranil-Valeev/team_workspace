<Page x:Class="Сourse_management.User_Pages.LessonPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Сourse_management.User_Pages"
      mc:Ignorable="d" 
      d:DesignHeight="768" d:DesignWidth="872"
      Title="LessonPage">

    <Grid Background="Transparent">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="50">

                <!-- Кнопка "Назад" -->
                <Button Content="← Назад к курсу"
                        Width="180"
                        Height="40"
                        Margin="0,0,0,20"
                        HorizontalAlignment="Left"
                        FontSize="14"
                        Foreground="#C9D4F0"
                        Background="#2C416C"
                        BorderBrush="#6F87B8"
                        BorderThickness="2"
                        Cursor="Hand"
                        Click="Back_Click"
                        Style="{StaticResource RoundButtonStyle}"/>

                <!-- Заголовок урока -->
                <TextBlock x:Name="LessonNameTextBlock"
                           Text="Название урока"
                           Foreground="#C9D4F0"
                           FontSize="32"
                           FontWeight="Bold"
                           Margin="0,0,0,10"/>

                <!-- Информация об уроке -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,30">
                    <TextBlock Text="Часть: "
                               Foreground="#9AA8C7"
                               FontSize="14"/>
                    <TextBlock x:Name="LessonPartTextBlock"
                               Text="1"
                               Foreground="#C9D4F0"
                               FontSize="14"
                               Margin="0,0,20,0"/>

                    <TextBlock Text="Язык программирования: "
                               Foreground="#9AA8C7"
                               FontSize="14"/>
                    <TextBlock x:Name="LanguageTextBlock"
                               Text="Python"
                               Foreground="#C9D4F0"
                               FontSize="14"
                               FontWeight="Bold"/>
                </StackPanel>

                <!-- Содержание урока -->
                <TextBlock Text="Содержание урока"
                           Foreground="#C9D4F0"
                           FontSize="24"
                           FontWeight="Bold"
                           Margin="0,0,0,15"/>

                <Border Background="#2C416C"
                        BorderBrush="#6F87B8"
                        BorderThickness="2"
                        CornerRadius="15"
                        Padding="30"
                        Margin="0,0,0,40">
                    <TextBlock x:Name="LessonContentTextBlock"
                               Text="Содержание урока..."
                               Foreground="#C9D4F0"
                               FontSize="16"
                               TextWrapping="Wrap"
                               LineHeight="24"/>
                </Border>

                <!-- Задания урока -->
                <TextBlock Text="Задания"
                           Foreground="#C9D4F0"
                           FontSize="24"
                           FontWeight="Bold"
                           Margin="0,0,0,20"/>

                <!-- Список заданий -->
                <ItemsControl x:Name="TasksItemsControl">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#2C416C"
                                    BorderBrush="#6F87B8"
                                    BorderThickness="2"
                                    CornerRadius="15"
                                    Margin="0,0,0,20"
                                    Padding="25">
                                <StackPanel>
                                    <!-- Номер и название задания -->
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                        <TextBlock Text="Задание "
                                                   Foreground="#9AA8C7"
                                                   FontSize="20"
                                                   FontWeight="Bold"/>
                                        <TextBlock Text="{Binding Tasks_Number}"
                                                   Foreground="#4A7AC9"
                                                   FontSize="20"
                                                   FontWeight="Bold"
                                                   Margin="5,0,10,0"/>
                                        <TextBlock Text="-"
                                                   Foreground="#9AA8C7"
                                                   FontSize="20"
                                                   Margin="0,0,10,0"/>
                                        <TextBlock Text="{Binding Tasks_Name}"
                                                   Foreground="#C9D4F0"
                                                   FontSize="20"
                                                   FontWeight="Bold"/>
                                    </StackPanel>

                                    <!-- Текст задания -->
                                    <TextBlock Text="{Binding Tasks_Text}"
                                               Foreground="#9AA8C7"
                                               FontSize="15"
                                               TextWrapping="Wrap"
                                               Margin="0,0,0,20"
                                               LineHeight="22"/>

                                    <!-- Поле для кода -->
                                    <TextBlock Text="Введите ваш код:"
                                               Foreground="#9AA8C7"
                                               FontSize="14"
                                               Margin="0,0,0,8"/>

                                    <TextBox x:Name="CodeTextBox"
                                             Height="200"
                                             TextWrapping="NoWrap"
                                             AcceptsReturn="True"
                                             VerticalScrollBarVisibility="Auto"
                                             HorizontalScrollBarVisibility="Auto"
                                             Background="#1E1E1E"
                                             Foreground="#D4D4D4"
                                             BorderBrush="#6F87B8"
                                             BorderThickness="2"
                                             Padding="15"
                                             FontFamily="Consolas"
                                             FontSize="14"
                                             Margin="0,0,0,15"
                                             Tag="{Binding Tasks_Id}"/>

                                    <!-- Область вывода -->
                                    <TextBlock Text="Вывод программы:"
                                               Foreground="#9AA8C7"
                                               FontSize="14"
                                               Margin="0,0,0,8"/>

                                    <Border Background="#1E1E1E"
                                            BorderBrush="#6F87B8"
                                            BorderThickness="2"
                                            CornerRadius="5"
                                            Padding="15"
                                            MinHeight="80"
                                            Margin="0,0,0,15">
                                        <TextBlock x:Name="OutputTextBlock"
                                                   Foreground="#D4D4D4"
                                                   FontFamily="Consolas"
                                                   FontSize="13"
                                                   TextWrapping="Wrap"
                                                   Text="Здесь будет отображен результат выполнения вашего кода..."/>
                                    </Border>

                                    <!-- Кнопки -->
                                    <StackPanel Orientation="Horizontal">
                                        <Button Content="▶ Запустить код"
                                                Width="180"
                                                Height="45"
                                                Margin="0,0,15,0"
                                                FontSize="15"
                                                Foreground="#C9D4F0"
                                                Background="#4A7AC9"
                                                BorderBrush="#6F87B8"
                                                BorderThickness="2"
                                                Cursor="Hand"
                                                Click="RunCode_Click"
                                                Tag="{Binding Tasks_Id}"
                                                Style="{StaticResource RoundButtonStyle}"/>

                                        <Button Content="✓ Проверить решение"
                                                Width="200"
                                                Height="45"
                                                FontSize="15"
                                                Foreground="#C9D4F0"
                                                Background="#4AAC4A"
                                                BorderBrush="#3A8C3A"
                                                BorderThickness="2"
                                                Cursor="Hand"
                                                Click="CheckSolution_Click"
                                                Tag="{Binding Tasks_Id}"
                                                Style="{StaticResource RoundButtonStyle}"/>
                                    </StackPanel>

                                    <!-- Индикатор выполнения -->
                                    <Border x:Name="CompletedIndicator"
                                            Background="#4AAC4A"
                                            CornerRadius="10"
                                            Padding="15,10"
                                            Margin="0,15,0,0"
                                            Visibility="Collapsed">
                                        <TextBlock Text="✓ Задание выполнено!"
                                                   Foreground="White"
                                                   FontSize="14"
                                                   FontWeight="Bold"
                                                   HorizontalAlignment="Center"/>
                                    </Border>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Сообщение если заданий нет -->
                <TextBlock x:Name="NoTasksTextBlock"
                           Text="В этом уроке нет заданий"
                           Foreground="#9AA8C7"
                           FontSize="16"
                           HorizontalAlignment="Center"
                           Margin="0,30,0,0"
                           Visibility="Collapsed"/>

                <!-- Индикатор прогресса -->
                <Border Background="#2C416C"
                        BorderBrush="#6F87B8"
                        BorderThickness="2"
                        CornerRadius="15"
                        Padding="25"
                        Margin="0,20,0,20">
                    <StackPanel>
                        <TextBlock x:Name="ProgressTextBlock"
                                   Text="Прогресс: 0 из 0 заданий выполнено"
                                   Foreground="#C9D4F0"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
