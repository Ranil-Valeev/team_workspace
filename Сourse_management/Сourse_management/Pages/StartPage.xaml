<Page x:Class="Сourse_management.Pages.StartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Сourse_management.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StartPage">

    <Grid>
        <!-- Фон -->
        <Border>
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#0A1323" Offset="0"/>
                    <GradientStop Color="#050B16" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
        </Border>

        <!-- Центральный блок -->
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="0,0,0,40"
                    Orientation="Vertical">

            <Image Source="/Assets/Лого.png"
                   Width="240"
                   Height="240"
                   Stretch="Uniform"
                   Margin="0,0,0,20"/>

            <TextBlock Text="Hello, Code!"
                       Foreground="#9AA8C7"
                       FontSize="28"
                       FontWeight="Light"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,40"/>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center">

                <Button Content="Войти"
                        Width="220"
                        Height="50"
                        Margin="0,0,40,0"
                        FontSize="20"
                        Foreground="#C9D4F0"
                        Background="#2C416C"
                        BorderBrush="#6F87B8"
                        BorderThickness="2"
                        Cursor="Hand"
                        Click="Login_Click"/>

                <Button Content="Регистрация"
                        Width="220"
                        Height="50"
                        FontSize="20"
                        Foreground="#C9D4F0"
                        Background="#2C416C"
                        BorderBrush="#6F87B8"
                        BorderThickness="2"
                        Cursor="Hand"
                        Click="Register_Click"/>

            </StackPanel>
        </StackPanel>

        <!-- Телега -->
        <Button Width="42"
                Height="42"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="0,0,30,30"
                Background="Transparent"
                BorderThickness="0"
                Cursor="Hand"
                Click="Telegram_Click">
            <Image Source="/Assets/Телега.png"
                   Stretch="Uniform"/>
        </Button>
    </Grid>
</Page>
