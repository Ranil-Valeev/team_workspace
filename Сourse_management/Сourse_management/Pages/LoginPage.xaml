<Page x:Class="Сourse_management.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Сourse_management.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <!-- Фон -->
        <Border Background="#131723">
            
        </Border>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Лого -->
            <StackPanel Grid.Row="0"
                        HorizontalAlignment="Center"
                        Margin="0,60,0,0">
                <Image Source="/Assets/Лого.png"
                       Width="120"
                       Height="120"
                       Stretch="Uniform"
                       Margin="0,0,0,8"/>

                <TextBlock Text="Hello, Code!"
                           Foreground="#9AA8C7"
                           FontSize="18"
                           FontWeight="Light"
                           HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- Поля -->
            <StackPanel Grid.Row="1"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Width="520">

                <TextBlock Text="Введите логин:"
                           Foreground="#9AA8C7"
                           FontSize="14"
                           Margin="0,0,0,6"/>

                <TextBox Style="{StaticResource RoundTextBoxStyle}"
                         x:Name="TbLogin"
                         Margin="0,0,0,18">
                    <TextBox.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="18"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>

                <TextBlock Text="Введите пароль:"
                           Foreground="#9AA8C7"
                           FontSize="14"
                           Margin="0,0,0,6"/>

                <PasswordBox x:Name="PbPassword" Style="{StaticResource RoundPasswordBoxStyle}"
             Margin="0,0,0,0"/>

            </StackPanel>

            <!-- Кнопки -->
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,70">

                <Button Content="Ok"
                        Width="200"
                        Height="46"
                        Margin="0,0,80,0"
                        FontSize="18"
                        Foreground="#C9D4F0"
                        Background="#2C416C"
                        BorderBrush="#6F87B8"
                        BorderThickness="2"
                        Cursor="Hand"
                        Click="Ok_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="23">
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button Content="Отмена"
                        Width="200"
                        Height="46"
                        FontSize="18"
                        Foreground="#C9D4F0"
                        Background="#2C416C"
                        BorderBrush="#6F87B8"
                        BorderThickness="2"
                        Cursor="Hand"
                        Click="Cancel_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="23">
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

            </StackPanel>
        </Grid>
    </Grid>
</Page>
