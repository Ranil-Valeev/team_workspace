<Page x:Class="Сourse_management.Admin_Pages.Add_Task"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Сourse_management.Admin_Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Add_Task">
    <Grid Background="Transparent">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="50">
                <TextBlock Text="Управление заданиями"
                           Foreground="#C9D4F0"
                           FontSize="32"
                           FontWeight="Bold"
                           Margin="0,0,0,30"/>

                <!-- Комбобокс для выбора задания -->
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Right"
                            Margin="0,0,0,20">
                    <TextBlock Text="Выберите задание:"
                               Foreground="#9AA8C7"
                               FontSize="14"
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>
                    <ComboBox x:Name="TasksComboBox" 
                              Width="300"
                              Height="40"
                              Background="#394873"
                              Foreground="#A6AFC8"
                              BorderBrush="#A6AFC8"
                              BorderThickness="2"
                              FontSize="14"
                              SelectionChanged="TasksComboBox_SelectionChanged"
                              DisplayMemberPath="Tasks_Name"/>
                </StackPanel>

                <!-- Выбор урока (ComboBox) -->
                <TextBlock Text="Выберите урок:"
                           Foreground="#9AA8C7"
                           FontSize="14"
                           Margin="0,0,0,5"/>
                <ComboBox x:Name="LessonsComboBox"
                          Height="40"
                          Background="#394873"
                          Foreground="#A6AFC8"
                          BorderBrush="#A6AFC8"
                          BorderThickness="2"
                          FontSize="14"
                          DisplayMemberPath="Lessons_Name"
                          Margin="0,0,0,20"/>

                <!-- Название задания -->
                <TextBlock Text="Название задания:"
                           Foreground="#9AA8C7"
                           FontSize="14"
                           Margin="0,0,0,5"/>
                <TextBox x:Name="TaskNameTextBox"
                         Style="{StaticResource RoundTextBoxStyle}"
                         Margin="0,0,0,20"/>

                <!-- Текст задания -->
                <TextBlock Text="Текст задания:"
                           Foreground="#9AA8C7"
                           FontSize="14"
                           Margin="0,0,0,5"/>
                <TextBox x:Name="TaskTextTextBox"
                         Height="150"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"
                         Background="#394873"
                         Foreground="#A6AFC8"
                         BorderBrush="#A6AFC8"
                         BorderThickness="2"
                         Padding="16,10"
                         FontSize="14"
                         Margin="0,0,0,20"/>

                <!-- Ответ -->
                <TextBlock Text="Ответ на задание:"
                           Foreground="#9AA8C7"
                           FontSize="14"
                           Margin="0,0,0,5"/>
                <TextBox x:Name="TaskAnswerTextBox"
                         Height="100"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"
                         Background="#394873"
                         Foreground="#A6AFC8"
                         BorderBrush="#A6AFC8"
                         BorderThickness="2"
                         Padding="16,10"
                         FontSize="14"
                         Margin="0,0,0,20"/>

                <!-- Номер задания -->
                <TextBlock Text="Номер задания:"
                           Foreground="#9AA8C7"
                           FontSize="14"
                           Margin="0,0,0,5"/>
                <TextBox x:Name="TaskNumberTextBox"
                         Style="{StaticResource RoundTextBoxStyle}"
                         Margin="0,0,0,30"/>

                <!-- Кнопки действий -->
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Right">
                    <Button Content="Сохранить"
                            Width="150"
                            Height="46"
                            Margin="0,0,15,0"
                            FontSize="16"
                            Foreground="#C9D4F0"
                            Background="#2C416C"
                            BorderBrush="#6F87B8"
                            BorderThickness="2"
                            Cursor="Hand"
                            Click="SaveButton_Click"
                            Style="{StaticResource RoundButtonStyle}"/>

                    <Button Content="Новый"
                            Width="150"
                            Height="46"
                            Margin="0,0,15,0"
                            FontSize="16"
                            Foreground="#C9D4F0"
                            Background="#2C416C"
                            BorderBrush="#6F87B8"
                            BorderThickness="2"
                            Cursor="Hand"
                            Click="NewButton_Click"
                            Style="{StaticResource RoundButtonStyle}"/>

                    <Button Content="Удалить"
                            Width="150"
                            Height="46"
                            FontSize="16"
                            Foreground="#C9D4F0"
                            Background="#C94A4A"
                            BorderBrush="#A83636"
                            BorderThickness="2"
                            Cursor="Hand"
                            Click="DeleteButton_Click"
                            Style="{StaticResource RoundButtonStyle}"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
