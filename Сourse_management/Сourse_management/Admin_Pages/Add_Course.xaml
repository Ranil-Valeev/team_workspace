<Page x:Class="Сourse_management.Admin_Pages.Add_Course"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Сourse_management.Admin_Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Add_Course">
    <Grid Background="Transparent">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="50">
                <TextBlock Text="Управление курсами"
                           Foreground="#C9D4F0"
                           FontSize="32"
                           FontWeight="Bold"
                           Margin="0,0,0,30"/>

                <!-- Комбобокс для выбора курса -->
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Right"
                            Margin="0,0,0,20">
                    <TextBlock Text="Выберите курс:"
                               Foreground="#9AA8C7"
                               FontSize="14"
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>
                    <ComboBox x:Name="CoursesComboBox" 
                              Width="300"
                              Height="40"
                              Background="#394873"
                              Foreground="#A6AFC8"
                              BorderBrush="#A6AFC8"
                              BorderThickness="2"
                              FontSize="14"
                              SelectionChanged="CoursesComboBox_SelectionChanged"
                              DisplayMemberPath="Courses_Name"/>
                </StackPanel>

                <!-- Название курса -->
                <TextBlock Text="Название курса:"
                           Foreground="#9AA8C7"
                           FontSize="14"
                           Margin="0,0,0,5"/>
                <TextBox x:Name="CourseNameTextBox"
                         Style="{StaticResource RoundTextBoxStyle}"
                         Margin="0,0,0,20"/>

                <!-- Описание курса -->
                <TextBlock Text="Описание курса:"
                           Foreground="#9AA8C7"
                           FontSize="14"
                           Margin="0,0,0,5"/>
                <TextBox x:Name="CourseDescriptionTextBox"
                         Height="100"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"
                         Background="#394873"
                         Foreground="#A6AFC8"
                         BorderBrush="#A6AFC8"
                         BorderThickness="2"
                         Padding="16,10"
                         FontSize="14"
                         Margin="0,0,0,20"/>

                <!-- Часть курса -->
                <TextBlock Text="Часть курса:"
                           Foreground="#9AA8C7"
                           FontSize="14"
                           Margin="0,0,0,5"/>
                <TextBox x:Name="CoursePartTextBox"
                         Style="{StaticResource RoundTextBoxStyle}"
                         Margin="0,0,0,20"/>

               

                <!-- Язык (ComboBox) -->
                <TextBlock Text="Выберите язык:"
                           Foreground="#9AA8C7"
                           FontSize="14"
                           Margin="0,0,0,5"/>
                <ComboBox x:Name="LanguageComboBox"
                          Height="40"
                          Background="#394873"
                          Foreground="#A6AFC8"
                          BorderBrush="#A6AFC8"
                          BorderThickness="2"
                          FontSize="14"
                          DisplayMemberPath="Language1"
                          Margin="0,0,0,30"/>

                <!-- Кнопки действий -->
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Right">
                    <Button Content="Сохранить"
                            Width="150"
                            Height="46"
                            Margin="0,0,15,0"
                            FontSize="16"
                            Foreground="#C9D4F0"
                            Background="#2C416C"
                            BorderBrush="#6F87B8"
                            BorderThickness="2"
                            Cursor="Hand"
                            Click="SaveButton_Click"
                            Style="{StaticResource RoundButtonStyle}"/>

                    <Button Content="Новый"
                            Width="150"
                            Height="46"
                            Margin="0,0,15,0"
                            FontSize="16"
                            Foreground="#C9D4F0"
                            Background="#2C416C"
                            BorderBrush="#6F87B8"
                            BorderThickness="2"
                            Cursor="Hand"
                            Click="NewButton_Click"
                            Style="{StaticResource RoundButtonStyle}"/>

                    <Button Content="Удалить"
                            Width="150"
                            Height="46"
                            FontSize="16"
                            Foreground="#C9D4F0"
                            Background="#C94A4A"
                            BorderBrush="#A83636"
                            BorderThickness="2"
                            Cursor="Hand"
                            Click="DeleteButton_Click"
                            Style="{StaticResource RoundButtonStyle}"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
