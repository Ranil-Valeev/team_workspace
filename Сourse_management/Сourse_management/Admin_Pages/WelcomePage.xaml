<Page x:Class="Сourse_management.Admin_Pages.WelcomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Сourse_management.Admin_Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="WelcomePage">

    <Grid Background="Transparent">
        <StackPanel VerticalAlignment="Center"
                    Margin="80,0,80,0">

            <TextBlock Text="Добро пожаловать в рабочую область"
                       Foreground="#6B7A9F"
                       FontSize="28"
                       FontWeight="Light"
                       TextWrapping="Wrap"
                       Margin="0,0,0,10"/>

            <TextBlock Text="управления платформой Hello, Code!"
                       Foreground="#6B7A9F"
                       FontSize="28"
                       FontWeight="Light"
                       TextWrapping="Wrap"
                       Margin="0,0,0,50"/>

            <TextBlock Text="Этот раздел предназначен для организации"
                       Foreground="#6B7A9F"
                       FontSize="18"
                       TextWrapping="Wrap"
                       Margin="0,0,0,5"/>

            <TextBlock Text="образовательного пространства и поддержания"
                       Foreground="#6B7A9F"
                       FontSize="18"
                       TextWrapping="Wrap"
                       Margin="0,0,0,5"/>

            <TextBlock Text="его актуальности."
                       Foreground="#6B7A9F"
                       FontSize="18"
                       TextWrapping="Wrap"
                       Margin="0,0,0,50"/>

            <TextBlock Text="Здесь вы можете настраивать структуру курсов,"
                       Foreground="#6B7A9F"
                       FontSize="18"
                       TextWrapping="Wrap"
                       Margin="0,0,0,5"/>

            <TextBlock Text="обновлять учебные материалы и поддерживать"
                       Foreground="#6B7A9F"
                       FontSize="18"
                       TextWrapping="Wrap"
                       Margin="0,0,0,5"/>

            <TextBlock Text="целостность контента."
                       Foreground="#6B7A9F"
                       FontSize="18"
                       TextWrapping="Wrap"
                       Margin="0,0,0,50"/>

            <TextBlock Text="Используйте меню справа для начала работы."
                       Foreground="#6B7A9F"
                       FontSize="18"
                       TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</Page>
